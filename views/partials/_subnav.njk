<!-- [html-validate-disable-next no-unused-disable, unique-landmark -- allow 2 navs with the same aria-labelledby because they contain the same information] -->
<nav class="app-subnav" aria-labelledby="app-subnav-heading">
  <h2 class="govuk-visually-hidden" id="app-subnav-heading">Pages in this section</h2>
  {% for item in navigation %}
    {% if permalink and item.isActive(permalink) %}
    {% if item.items %}
      {% for theme, items in item.items %}
        {% if theme != 'undefined' %}
          <h3 class="app-subnav__theme">{{ theme }}</h3>
        {% endif %}
        <ul class="app-subnav__section">
        {% for subitem in items %}
          <li class="app-subnav__section-item{% if subitem.isCurrent(permalink) %} app-subnav__section-item--current{% endif %}">
            <a class="app-subnav__link govuk-link govuk-link--no-visited-state govuk-link--no-underline" href="{{ subitem.href }}"{% if subitem.isCurrent(permalink) %} aria-current="page"{% endif %}>
              {{ subitem.text }}
            </a>
            {% if (subitem.headings) and (subitem.isCurrent(permalink)) %}
              <ul class="app-subnav__section app-subnav__section--nested">
                {% for link in subitem.headings %}
                  {% if link.depth == 2 and not link.ignoreInPageNav %}
                    <li class="app-subnav__section-item">
                      <a class="app-subnav__link govuk-link govuk-link--no-visited-state govuk-link--no-underline" href="{{ subitem.href }}#{{ link.url }}" >
                        {{ link.text }}
                      </a>
                    </li>
                  {% endif %}
                {% endfor %}
              </ul>
            {% endif %}
          </li>
        {% endfor %}
        </ul>
      {% endfor %}
    {% endif %}
    {% endif %}
  {% endfor %}
</nav>
