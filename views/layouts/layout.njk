{% extends "_generic.njk" %}

{% block containerStart %}
  {# Only render breadcrumbs on pages that aren't the homepage. #}
  {% if not isHomepage() %}
    {{ govukBreadcrumbs({
      items: getAncestorPages(permalink)
    }) }}
  {% endif %}
{% endblock %}

{# We want the homepage to bypass the width container but it still needs a main #}
{% block container %}
  <main id="main-content">
  {{ contents | safe }}
  </main>
{% endblock %}

{% block govukFooter %}
  {% include "_footer.njk" %}
{% endblock %}
