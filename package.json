    "jstransformer-nunjucks": "^1.1.0",
    "marked": "^5.0.2",
    "metalsmith": "^2.6.0",
    "metalsmith-canonical": "^1.2.0",
    "metalsmith-renamer": "^0.5.217",
    "nunjucks": "^3.2.4",
    "outdent": "^0.8.0",
    "puppeteer": "^20.5.0",
    "rollup": "^3.23.1",
    "sitemap": "^7.1.1",
    "slash": "^3.0.0",
    "standard": "^17.1.0",
    "stylelint": "^14.16.1",
    "stylelint-config-gds": "^0.3.0",
    "stylelint-order": "^6.0.3",
    "tap-mocha-reporter": "^5.0.3"
